{
  "name": "factory-sim",
  "version": "1.0.0",
  "type": "module",
  "description": "Desktop factory simulation app with CSV upload",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "npm run build:all && electron .",
    "start": "npm run build:all && electron .",
    "build": "npm run build:all",
    "build:all": "npm run build:frontend && npm run build:electron",
    "build:frontend": "node build-frontend.js",
    "build:electron": "tsc -p tsconfig.preload.json && mv dist-electron/electron/preload.js dist-electron/electron/preload.cjs && tsc -p tsconfig.node.json",
    "type-check": "tsc -p tsconfig.node.json --noEmit",
    "test:mm1": "npx tsx tests/run-mm1-validation.ts",
    "test:comprehensive": "npx tsx tests/run-comprehensive-validation.ts",
    "test:all": "npm run test:comprehensive",
    "test:validate": "npm run test:mm1",
    "package": "npm run build:all && electron-builder --dir",
    "package:mac": "npm run build:all && electron-builder --mac",
    "package:win": "npm run build:all && electron-builder --win",
    "package:linux": "npm run build:all && electron-builder --linux"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "csv"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/papaparse": "^5.3.15",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/seedrandom": "^3.0.8",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/utilities": "^3.2.2",
    "@monaco-editor/react": "^4.7.0",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.4.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/three": "^0.180.0",
    "dotenv": "^17.2.3",
    "electron": "^30.5.1",
    "immer": "^10.1.3",
    "jstat": "^1.9.6",
    "lucide-react": "^0.546.0",
    "mammoth": "^1.11.0",
    "openai": "^6.5.0",
    "papaparse": "^5.4.1",
    "pdf-parse": "^2.1.7",
    "postprocessing": "^6.37.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reactflow": "^11.11.4",
    "recharts": "^3.2.1",
    "seedrandom": "^3.0.5",
    "three": "^0.180.0",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.8"
  },
  "build": {
    "appId": "com.simiodestroyer.factorysim",
    "productName": "Factory Simulator",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "!node_modules/@napi-rs/canvas-android-*/**/*",
      "!node_modules/@napi-rs/canvas-win32-*/**/*",
      "!node_modules/@napi-rs/canvas-linux-*/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/pdf-parse/**/*",
      "node_modules/canvas/**/*"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
